<%- include('./partials/head.ejs') %>

</head>

<body>
    <%- include('./partials/nav.ejs') %>

    <div class="container">
       <%- include('./partials/heading.ejs') %> 

        <div class="row justify-content-between book-item">            
                <% if (books.length > 0) { %> 
                    
                        <% books.forEach((book) => { %>
                            <div class="col-md-5 text-capitalize book">
                                <a href="/books/<%= book._id %> ">
                                  <div>
                                        <h3>
                                            <%= book.title %>
                                        </h3>
                                        <hr>
                                        <h4>
                                            <%= book.author %>
                                        </h4>
                                        <hr>
                                        <p class="">
                                            <%= book.snippet %>
                                        </p>
                                  </div>
                                </a>
                            </div>
                   <%  }) %> 
                <% } %>                 
            </div>

       </div>
    </div>
    
    <%- include('./partials/scripts.ejs') %>
</body>