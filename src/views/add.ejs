<%- include('./partials/head.ejs') %> 

<%- include('./partials/nav.ejs') %> 

<body>
    <div class="container">
        <%- include('./partials/heading.ejs') %>

        <div class="row justify-content-center">
            <form action="/book-store" method="POST" class="add-form">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" placeholder="Title" name="title">
                </div>
                <div class="form-group">
                    <label for="author">Author</label>
                    <input type="text" class="form-control" id="author" placeholder="Author" name="author">
                </div>
                <div class="form-group">
                    <label for="snippet">About the Book (Max 160 characters)</label>
                    <textarea class="form-control" id="snippet" rows="3" cols="80" name="snippet"></textarea>
                </div>
                <div class="form-group">
                    <label for="body">Book Body</label>
                    <textarea class="form-control" id="body" rows="5" cols="70" name="body"></textarea>
                </div>
                <button class="btn btn-outline-light btn">Submit</button>
                
            </form>
        </div>
    </div>

    <%- include('./partials/scripts.ejs') %>
</body>
